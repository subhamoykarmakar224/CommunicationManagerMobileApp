<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:text="[Lat, Long]"
                android:textSize="20sp" />
        <TextView
            android:id="@+id/textViewLatLong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="(0, 0)"
            android:textAlignment="center"
            android:textSize="15sp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchUsePowerSaver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GPS/SavePower"
            android:padding="20dp"
            />

        <TextView
            android:id="@+id/textViewSensorUsedStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sensor: Using Towers + WiFi."
            android:paddingLeft="20dp"
            />

        <TextView
            android:id="@+id/textViewAccuracy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accuracy: -na-"
            android:paddingLeft="20dp"
            />

        <TextView
            android:id="@+id/textViewApproxAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address: -na-"
            android:paddingLeft="20dp"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>



    <Button
        android:id="@+id/btnStartStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:text="Start" />

</RelativeLayout>